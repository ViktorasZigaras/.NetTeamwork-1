@model List<User>

@if (Model?.Count != 0)
{
    <h2>Registered users</h2>

    foreach (var user in Model)
    {
        <div class="text-left border-bottom pb-2">
            <p>Name: @user.Name</p>
            <p>LastName: @user.LastName</p>
            
            @foreach (var account in user.Accounts)
            {
                <p>Bank account: @account.AccountNumber</p>
                <p>Bank balance: @account.Balance</p>
            }
            <div>
                <a href="/User/Update/@user.Id">Update user info</a>
            </div>
            
            <div>
                <a href="/User/Delete/@user.Id">Delete user</a>
            </div>
        </div>
    }
}
else
{
    <h2>User list is empty</h2>
}