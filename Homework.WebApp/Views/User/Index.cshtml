@model User

@if (Model?.Name != null)
{
    <h1>Registered as @Model.Name</h1>
}
else
{
    <h2>Users</h2>
    <form asp-action="Add">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter your name">
            <span asp-validation-for="Name" class="text-danger"></span>
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" placeholder="Enter your lastname">
            <span asp-validation-for="LastName" class="text-danger"></span>
            <label asp-for="PersonalId"></label>
            <input asp-for="PersonalId" class="form-control" placeholder="Enter your person ID">
            <span asp-validation-for="PersonalId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-outline-success form-control">Register new user</button>
    </form>

    <div class="mt-2">
        <form action="/User/ShowAll">
            <button type="submit" class="btn btn-outline-primary form-control">Show all users list</button>
        </form>
    </div>
}